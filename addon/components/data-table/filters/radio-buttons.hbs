<div data-test-filters-radio-buttons={{@name}}>
  <label class="uk-display-block">{{@label}}</label>
  <div class="uk-button-group">
    {{#each @options as |option|}}
      <UkButton
        data-test-filters-radio-buttons-button={{if option.value "on" "off"}}
        class="uk-text-nowrap"
        @color={{if (eq @selected option.value) "primary" "default"}}
        @onClick={{fn @onChange option.value}}
      >
        {{option.label}}
      </UkButton>
    {{/each}}
  </div>
</div>